<html>
<body>
       

    <h1>Display Table</h1>
     <table border='1'>
        <tr>
            <th>ID</th>
            <th>Product Name</th>
            <th>Product Details</th>
            <th>Product Price</th>
            <th>Product Image</th>
            <th>Product Quantity</th>
            <th>Action</th>
        </tr>
        {{#each product_array }}
        <tr>
            {{!-- <td>{{ i+1 }}</td>  --}}
             <td> {{@index}}</td>
             <td>{{ p_name  }}</td> 
             <td>{{ p_details  }} </td> 
             <td>{{ p_price }}</td>
             <td><img src="/images/{{p_img}}" style="width: 100px;"></td> 
             <td>{{ p_qty  }}</td> 
             <td> <a href="/edit-product/{{_id }}">Edit</a> 
                 <a href="/delete/{{ _id }}">Delete</a>
                 <a href="/show/{{ _id }}">Show</a>
            </td> 
        </tr>
        {{/each}}
    </table>    

</body>
</html>