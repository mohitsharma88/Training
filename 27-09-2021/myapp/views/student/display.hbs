<style>
    table {
    counter-reset: tableCount;     
}
.counterCell:before {              
    content: counter(tableCount); 
    counter-increment: tableCount; 
}
</style>
<a href="reg">Signup</a>
    <a href="displaystud">Display</a>
<h1>Record</h1>
{{mydata.length}} Records Found

<table border='1'>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Mobile</th>
        <th>Age</th>
        {{!-- <th>Gender</th> --}}
        <th>Subject</th>
        <th>Action</th>
    </tr>

{{#each mydata}}
    <tr>
    <td class="counterCell"></td>
    <td>{{stud_name}}</td>
    <td>{{stud_mobile}}</td>
    <td>{{stud_age}}</td>
    {{!-- <td>{{stud_gender}}</td> --}}
    <td>{{stud_subject}}</td>
    <td>
        <a href="/editstud/{{_id}}">Edit</a> |
        <a href="/deletestud/{{_id}}" onclick="return confirm('Are you sure?')">Delete</a>

    </td>
    </tr>
{{/each}}


</table>